{
  "component": "Button",
  "desc": "一个快速定义样式尺寸的按钮组件",
  "type": 2,
  "event": [
    "onClick"
  ],
  "defaultStyle": {
    "margin": "15px 25%"
  },
  "props": [
    {
      "name": "$text",
      "type": "string",
      "tip": "按钮标题",
      "default": "Button"
    },
    {
      "name": "color",
      "tip": "按钮的颜色",
      "type": "string",
      "enum": [
        "default",
        "primary",
        "success",
        "warning",
        "danger"
      ],
      "default": "success"
    },
    {
      "name": "fill",
      "tip": "填充模式",
      "type": "string",
      "enum": [
        "solid",
        "outline",
        "none"
      ],
      "default": "solid"
    },
    {
      "name": "size",
      "tip": "大小",
      "type": "string",
      "enum": [
        "mini",
        "small",
        "middle",
        "large"
      ],
      "default": "middle"
    },
    {
      "name": "shape",
      "tip": "按钮的形状",
      "type": "string",
      "enum": [
        "default",
        "rounded",
        "rectangular"
      ],
      "default": "default"
    }
  ]
}