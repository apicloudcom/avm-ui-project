{
    "component": "Checkbox",
    "desc": "定义一个复选框",
    "type": 1,
    "props": [
        {
            "name": "checked",
            "type": "boolean",
            "default": false,
            "tip": "指定当前是否选中"
        },
        {
            "name": "defaultChecked",
            "type": "boolean",
            "default": false,
            "tip": "初始是否选中"
        },
        {
            "name": "disabled",
            "type": "boolean",
            "default": false,
            "tip": "失效状态"
        },
        {
            "name": "value",
            "type": "string",
            "tip": "携带的标识值，用于 `Group` 模式",
            "default": "1"
        },
        {
            "name": "label",
            "type": "string",
            "tip": "展示文本",
            "default": "选项"
        },
        {
            "name": "icon",
            "type": "string",
            "tip": "未选中图标"
        },
        {
            "name": "selectedIcon",
            "type": "string",
            "tip": "选中图标"
        },
        {
            "name": "description",
            "type": "string",
            "tip": "辅助说明描述"
        },
        {
            "name": "descIsOneLineShow",
            "type": "boolean",
            "tip": "辅助说明描述是否跟label文本在一行",
            "default": false
        },
        {
            "name": "isTwoHeadArrange",
            "type": "boolean",
            "tip": "复选icon是否跟文本分布两头展示",
            "default": false
        }
    ],
    "event": [
        "handleChange"
    ]
}