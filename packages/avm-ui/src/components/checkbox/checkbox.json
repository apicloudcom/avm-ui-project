{
    "component": "Checkbox",
    "desc": "定义一个复选框",
    "type": 2,
    "props": [
        {
            "name": "checked",
            "type": "boolean",
            "default": false,
            "tip": "指定当前是否选中"
        },
        {
            "name": "defaultChecked",
            "type": "boolean",
            "default": false,
            "tip": "初始是否选中"
        },
        {
            "name": "disabled",
            "type": "boolean",
            "default": false,
            "tip": "失效状态"
        },
        {
            "name": "value",
            "type": "string",
            "tip": "携带的标识值，用于 `Group` 模式"
        },
        {
            "name": "icon",
            "type": "string",
            "tip": "未选中图标"
        },
        {
            "name": "selectedIcon",
            "type": "string",
            "tip": "选中图标"
        }
    ],
    "event": [
        "onChange"
    ]
}