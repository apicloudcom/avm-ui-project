{
    "component": "CheckboxGroup",
    "desc": "定义一个勾选框组",
    "type": 2,
    "props": [
        {
            "name": "defaultValue",
            "type": "array",
            "tip": "默认选中的选项"
        },
        {
            "name": "disabled",
            "type": "boolean",
            "tip": "整组失效",
            "default": false
        },
        {
            "name": "value",
            "type": "array",
            "tip": "指定选中的选项"
        },
        {
            "name": "iconSize",
            "type": "string",
