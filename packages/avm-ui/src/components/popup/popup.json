{
    "component": "Popup",
    "desc": "弹出层",
    "type": 3,
    "event": [
        "onMaskClick",
        "onClick",
        "onClose",
        "onBack",
        "footBtnClick"
    ],
    "props": [
        {
            "name": "visible",
            "tip": "是否可见",
            "type": "boolean",
            "default": false
        },
        {
            "name": "position",
            "tip": "指定弹出的位置",
            "type": "string",
            "enum": ["bottom", "top", "left", "right"],
            "default": "bottom"
        },
        {
            "name": "className",
            "tip": "容器类名",
            "type": "string"
        },
        {
            "name": "bodyClassName",
            "tip": "内容区域类名",
            "type": "string"
        },
        {
            "name": "bodyStyle",
            "tip": "内容区域样式",
            "type": "object"
        },
        {
            "name": "maskClassName",
            "tip": "遮罩类名",
            "type": "string"
        },
        {
            "name": "maskStyle",
            "tip": "遮罩样式",
            "type": "object"
        },
        {
            "name": "zIndex",
            "tip": "元素的 `z-index`",
            "type": "number",
            "default": 1000
        },
        {
            "name": "isTitle",
            "tip": "是否显示头部标题",
            "type": "boolean",
            "default": false
        },
        {
            "name": "titleText",
            "tip": "头部标题文本",
            "type": "string",
            "default": "标题"
        },
        {
            "name": "isBack",
            "tip": "是否显示左边返回按钮 (当isTitle设为true时生效)",
            "type": "boolean",
            "default": false
        },
        {
            "name": "isFooterBtn",
            "tip": "是否显示底部确定按钮",
            "type": "boolean",
            "default": false
        }
    ]
}